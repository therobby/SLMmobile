<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.karel.slmmobile">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".main"
        android:allowBackup="true"
        android:icon="@drawable/linuxbig"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DrawerActivity"
            android:label="@string/title_activity_drawer"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SlmSettingsActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".DonateActivity" />
        <activity android:name=".ShellActivity" />
        <activity android:name=".LibvirtActivity" />
        <activity android:name=".AuthActivity" />
        <activity android:name=".ProcessActivity" />
        <activity android:name=".sambaActivity" />
        <activity
            android:name=".BackupsActivity"
            android:label="@string/title_activity_backups"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>