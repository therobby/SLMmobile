<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#00000001"
                android:centerColor="#000b131e"
                android:centerY="1.0"
                android:endColor="#000d1522"
                android:angle="270"
                />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#8176ff03"
                    android:centerColor="#81eeff41"
                    android:centerY="1.0"
                    android:endColor="#81dd2c00"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
</layer-list>